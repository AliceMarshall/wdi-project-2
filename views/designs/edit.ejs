<div class="container">
  <h2>Edit <%= design.name %></h2>

  <form method="POST" action="/designs/<%= design.id %>">
    <input type="hidden" name="_method" value="PUT">

    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" value="<%= design.name %>" class="form-control">
    </div>
    <div class="form-group">
      <label for="technique">Technique</label>
      <input type="text" name="technique" id="technique" value="<%= design.technique %>" class="form-control">
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      <input type="text" name="image" id="image" value="<%= design.image %>" class="form-control">
    </div>
    <div class="form-group">
      <label for="difficulty">Difficulty</label>
      <input type="number" name="difficulty" min="1" max="3" id="difficulty" value="<%= design.difficulty %>" class="form-control">
    </div>
    <div class="form-group">
      <label for="size">Size</label>
      <input type="text" name="size" id="size" value="<%= design.size %>" class="form-control">
    </div>

    <button class="btn">Update</button>
  </form>
</div>
