<div class="container form-page">
  <div class="row justify-content-md-center">
    <div class="col-md-4 col-md-auto">
      <h1>CREATE NEW PROJECT</h1>
      <form method="POST" action="/users/<%= user.id %>" enctype="multipart/form-data">

        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" class="form-control">
        </div>
        <div class="form-group">
          <label for="technique">Technique</label>
          <input type="text" name="technique" id="technique" class="form-control">
        </div>
        <div class="form-group">
          <label for="image" class="btn">IMAGE</label>
          <input type="file" name="image" id="image" class="form-control">
        </div>
        <div class="form-group">
          <label for="difficulty">Difficulty</label>
          <input type="text" name="difficulty" id="difficulty" class="form-control" placeholder="Beginner/Intermediate/Expert">
        </div>
        <div class="form-group">
          <label for="size">Needle/Hook Size</label>
          <input type="text" name="size" id="size" class="form-control">
        </div>

        <button class="btn">ADD</button>
      </form>
    </div>
  </div>
</div>
